<!DOCTYPE html>
<html>
<head>
<script>

          class Account
          {
              constructor(x,y)
              {
                  this.name = x;
                  this.balance = y;
              }

              deposite(amount)
              {
                  this.balance+=amount;
              }

              display()
              {
                  var str = "NAME :-"+this.name+"<br/>BALANCE :-"+this.balance+"<br/><br/>";
                  document.write(str);  
              }
          }

          person1 = new Account("GITESHWARI WADBUDHE",15000);
          person2 = new Account("GUNJAN KAPOOR",10000);
          person1.deposite(15000);
          person2.deposite(10000);
          person1.display();
          person2.display();

        </script>
		</head>
		</html>
